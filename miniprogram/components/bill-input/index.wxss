/* components/bill-input/index.wxss */
.mask-page{
 position: fixed;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 background-color: rgba(0, 0, 0, 0.5); 
}
.input-container{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background-color:slategray;
  border-radius: 28rpx 28rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top-input{
  background-color: #fff;
  height: 72rpx;
  width: 94%;
  margin-top: 24rpx;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.choose-type{
  color: #999;
  font-size: 36rpx;
  font-weight: lighter;
  padding-left: 24rpx;
}
.amount{
  color: firebrick;
  font-size: 36rpx;
  padding-right: 24rpx;
}
.footer-container{
  height: 100rpx;
  background-color:lightsteelblue;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.node-item,.node-item__choose{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}
.node-item__choose{
  background-color:slategray
}
.scroll-view-x{
  height: 100rpx;
  overflow: scroll;
  display: flex;
}
.type-container{
  width: 94%;
  height: 300rpx;
  display: flex;
  flex-flow:row wrap ;
}
.sub-Item{
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx 20rpx  0 0 ;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 80rpx;
  background: #fff;
}
.sub-Item__img{
  width: 120rpx;
  height: 120rpx;
}
.sub-Item__label{
  font-size: 28rpx;
  color: #000;
  font-weight: lighter;
}