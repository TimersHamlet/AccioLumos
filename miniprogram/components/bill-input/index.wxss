/* components/bill-input/index.wxss */
.input-container{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background-color:slategray;
  border-radius: 28rpx 28rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top-input{
  background-color: #fff;
  height: 72rpx;
  width: 94%;
  margin-top: 24rpx;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.choose-type{
  color: #999;
  font-size: 36rpx;
  font-weight: lighter;
  padding-left: 24rpx;
}
.amount{
  color: firebrick;
  font-size: 36rpx;
  padding-right: 24rpx;
}
.footer-container{
  height: 100rpx;
  background-color:lightsteelblue;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.node-item,.node-item__choose{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}
.node-item__choose{
  background-color:slategray
}
.scroll-view-x{
  height: 100rpx;
  width: 500%;
  overflow: scroll;
  display: flex;
}