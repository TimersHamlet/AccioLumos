/* miniprogram/pages/main/index.wxss */

.page{
  --color-background: #f5f5f5;
  --color-line: #cccccc;
  --color-weekfont: #dddddd;
  position: fixed;
  top: 0;
  left: 0;
  width: inherit;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  background-color: var(--color-background) ;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.time-container{
  display: flex;
}
.time-left-arrow,.time-right-arrow{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.arrow-icon{
  width: 40rpx;
  height: 40rpx;
}
.time-label{
  line-height: 60rpx;
  padding: 0 20rpx 0 20rpx ;
}


.calendar-container{
  width: 94%;
  background-color: #ffffff;
  height: 600rpx;
  border-radius: 36rpx;
  display: flex;
  justify-content: center;
}
.top-week{
  display: flex;
  height: 60rpx;
  width: 94%;
  padding: 10rpx 0 10rpx 0;
  border-bottom: 1rpx solid var(--color-line);
}
.week-label{
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  color: var(--color-weekfont);
}