/* miniprogram/pages/main/index.wxss */

.page{
  --color-background: #f5f5f5;
  --color-line: #ccc;
  --color-weekfont: #ccc;
  position: fixed;
  top: 0;
  left: 0;
  width: inherit;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  background-color: var(--color-background) ;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.time-container{
  display: flex;
}
.time-left-arrow,.time-right-arrow{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.arrow-icon{
  width: 40rpx;
  height: 40rpx;
}
.time-label{
  line-height: 60rpx;
  padding: 0 20rpx 0 20rpx ;
}
.create-bill{
  height: 72rpx;
  padding: 0 !important;
  margin-top: 24rpx;
  background-color: #fff;
  border: 4rpx solid #666;
  border-radius: 36rpx;
  line-height: 72rpx;
  z-index: -1 !important;
}