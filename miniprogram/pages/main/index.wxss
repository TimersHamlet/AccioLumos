/* miniprogram/pages/main/index.wxss */
.page{
  position: fixed;
  top: 0;
  left: 0;
  width: inherit;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  flex-direction: column;
}
.top-container{
  display: flex;
  justify-content: center;
  width: inherit;
  position: absolute;
  align-items: center;
  flex: 1;
}
.add-button{
  width: 150rpx;
  height: 150rpx;
  background: linear-gradient(to bottom,#1E90FF,#87CEFA);
  border-radius: 150rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.input-container{
  height: 0;
  width: 0;
  border-left: 4rpx solid #aaa;
  border-right: 4rpx solid #aaa;
}
.input-main{
  display: none;
  margin-top: 100rpx;
  flex-direction: column;
  align-items: center;
}
.input-item{
  width: 94%;
  display: flex;
  min-height: 90rpx;
  align-items: center;
  border: 1rpx solid #000;
  margin-bottom: 36rpx;
}
.input-item__label{
  padding-left: 64rpx;
}

.top-line__left,.top-line__right{
  height: 4rpx;
  width: 0;
  margin: 0 20rpx 0 20rpx;
  background: linear-gradient(to left,#B22222,#FF4500)
}
.top-line__right{
  background: linear-gradient(to right,#B22222,#FF4500)
}