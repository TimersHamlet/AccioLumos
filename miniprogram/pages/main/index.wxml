<!-- miniprogram/pages/main/index.wxml -->
<view class="page">
  <view class="top-container" animation="{{topAnimation}}">
    <view class="top-line__left" animation="{{lineAnimation}}"></view>
    <view class="add-button" bind:tap="onAddButtonTap" animation="{{addButton.animation}}">
      <image src="../../assets/main-page-icon/plusIcon.svg" style="width:80rpx;height:80rpx" />
    </view>
    <view class="top-line__right" animation="{{lineAnimation}}"></view>
  </view>
  <view class="input-container" animation="{{inputAnimation}}">
    <view class="input-main" style="{{inputContainer.style}}">
      <view class="input-item">
        <text class="input-item__label">收入or支出</text>
      </view>
      <view class="input-item">
        <text class="input-item__label">金额</text>
      </view>
      <view class="input-item">
        <text class="input-item__label">来源</text>
      </view>
      <view class="input-item">
        <text class="input-item__label">类别</text>
      </view>
      <view class="input-item">
        <text class="input-item__label">备注</text>
      </view>
    </view>
  </view>
</view>