/* miniprogram/pages/today/index.wxss */
.page-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.title{
  display: flex;
  align-items: center;
  height: 90rpx;
}
.title-img{
  width: 60rpx;
  height: 60rpx;
  padding-left:40rpx ;
}
.title-label{
  font-family: "Segoe UI Symbol";
  font-size: 48rpx;
  padding-left: 40rpx;
}

.main-content-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 64rpx;
  align-self: center;
  width: 680rpx;
  height: 920rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.item-box,.add-box{
  width: 33%;
  height: 280rpx;
  border-radius: 20rpx;
  border: solid #808080 2rpx;
  background: #ffffff;
  transform: translate(0,40rpx);
}
.add-box{
  background-color: #f5f5f5;
  border: 0;
  border-radius: 0;
}
.item-box__img,.add-box__img{
  width: 132rpx;
  height: 132rpx;
  position: absolute;
  top: 110rpx;
  left: 48rpx;
}
.add-box__img{
  top: 48rpx;
}
.item-box__label{position: absolute;
  margin-left: 30rpx;
  margin-top: 20rpx;
  font-family: "Segoe UI Symbol";
  font-size: 48rpx;
}